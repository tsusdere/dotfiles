[push]
  default = upstream
[fetch]
  prune = true
[color]
  ui = auto
[alias]
  aa = add --all
  ap = add --patch
  b = branch
  browse = !hub browse
  cm = commit -m
  ca = commit --amend
  ci = commit -v
  co = checkout
  compare = !hub compare
  issues = !hub browse -- issues
  sla = log --oneline --decorate --graph --all -40
  unstage = reset
  uncommit = reset --soft HEAD^
  mup = !git checkout master && git pull && git checkout -
  cop = checkout -
  fall = "!for remote in $(git remote); do echo "Fetching $remote"; git fetch "$remote"; done"
  upstream = rev-parse --abbrev-ref --symbolic-full-name @{upstream}
  ureset = !git upstream && git reset --hard $(git upstream)
  pr = !hub pull-request
  draft = !hub pull-request --draft
[core]
  editor = nvim
  autocrlf = input
; [merge]
;   ff = only
[pull]
  ff = only
[user]
  name = tsusdere
  email = tsusdere@github.com
[github]
  user = tsusdere
[credential]
	helper = osxkeychain
[ghi]
	token = !security find-internet-password -a tsusdere -s github.com -l 'ghi token' -w
[filter "strongbox"]
	clean = strongbox -clean %f
	smudge = strongbox -smudge %f
	required = true
[diff "strongbox"]
	textconv = strongbox -diff
[branch "main"]
	mergeOptions = ff = only
[branch "master"]
	mergeOptions = ff = only
